@model CarsListViewModel

<h1>Все автомобили</h1>
<h3>@Model.CurrentCategory</h3>

<div class="row mt-5 mb-2">
    @{
        foreach (var car in Model.AllCars)
        {
            <div class="col-lg-4">
                <img class="img-thumbnail" src="@car.Img" alt="@car.Name" />
                <h2>@car.Name</h2>
                <p>@car.ShortDesc</p>
                <p>Ціна: @car.Price.ToString("c")</p>
                <p><a class="btn tbn-warning" href="#">Детальніше</a></p>
            </div>
        }
    }
</div>
